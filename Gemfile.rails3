# A sample Gemfile
source "http://rubygems.org"

gem "will_paginate", "~> 3.0.1"
group :test, :development do
  gem 'activerecord', '~>3.0.10', :require => 'active_record'
  gem 'activesupport', '~>3.0.10', :require => 'active_support'
  gem 'sqlite3-ruby', '=1.3.1'
  gem 'jeweler', '>=1.6.4'
  gem 'ruby-debug', '=0.10.3'
  gem 'ruby-debug-base', '=0.10.3'
  gem 'machinist', '=1.0.6'
  gem "rspec", "~> 2"
  gem 'test-unit', '=1.2.3'
  gem 'rr', '~>1.0.2'
